<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:weightSum="7"
    tools:context=".NormalCalculator">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/secondaryTextViewID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/primaryTextViewID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="0"
        android:textSize="45dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/ceBtnID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CE"
            android:textSize="40dp"
            android:layout_marginRight="5dp"
            />
        <Button
            android:id="@+id/cBtnID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:textSize="40dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/backBtnID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="←"
            android:textSize="40dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/divBtnID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="operatorFunction"
            android:text="/"
            android:textSize="40dp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/sevenBtnID"
            android:onClick="numFunction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="40dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/eightBtnID"
            android:onClick="numFunction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="40dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/nineBtnID"
            android:onClick="numFunction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="40dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/multiBtnID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="x"
            android:onClick="operatorFunction"
            android:textSize="40dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/fourBtnID"
            android:onClick="numFunction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="40dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/fiveBtnID"
            android:onClick="numFunction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="40dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/sixBtnID"
            android:onClick="numFunction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="40dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/subBtnID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="operatorFunction"
            android:text="-"
            android:textSize="40dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/oneBtnID"
            android:onClick="numFunction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="40dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/twoBtnID"
            android:onClick="numFunction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="40dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/threeBtnID"
            android:onClick="numFunction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="40dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/sumBtnID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="operatorFunction"
            android:text="+"
            android:textSize="40dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/inverseBtnID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="%"
            android:textSize="40dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/zeroBtnID"
            android:onClick="numFunction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="40dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/pointBtnID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="40dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/resultBtnID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="resultFunction"
            android:text="="
            android:textSize="40dp" />

    </LinearLayout>

</LinearLayout>